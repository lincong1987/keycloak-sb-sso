<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.topinfo.basic</groupId>
        <artifactId>topinfo-parent</artifactId>
        <version>2.2.0-SNAPSHOT</version>
    </parent>

    <groupId>com.topinfo.basic.platform.plugin</groupId>
    <artifactId>topinfo-plugin-monitor-client-starter-autoconfigurer</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.topinfo.basic.platform.plugin</groupId>
            <artifactId>topinfo-plugin-monitor-common</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <!--获取系统信息-->
        <dependency>
            <groupId>net.java.dev.jna</groupId>
            <artifactId>jna</artifactId>
            <version>5.14.0</version>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>net.java.dev.jna</groupId>
            <artifactId>jna-platform</artifactId>
            <version>5.14.0</version>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>cn.hutool</groupId>
            <artifactId>hutool-all</artifactId>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.alibaba</groupId>
            <artifactId>fastjson</artifactId>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.topinfo.basic.platform</groupId>
            <artifactId>topinfo-platform-mybatis-starter</artifactId>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.topinfo.basic.platform</groupId>
            <artifactId>topinfo-platform-redisson-starter</artifactId>
            <version>2.0.1-SNAPSHOT</version>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <!-- 原生rocketmq V1-->
        <dependency>
            <groupId>com.topinfo.basic.platform</groupId>
            <artifactId>topinfo-platform-rocketmq-starter</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <!-- 原生rocketmq V2-->
        <dependency>
            <groupId>com.topinfo.basic.platform.plugin</groupId>
            <artifactId>topinfo-plugin-rocketmq-starter</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
        <!-- 基于iot-center中心的mqtt组件 -->
        <dependency>
            <groupId>com.topinfo.basic.platform</groupId>
            <artifactId>topinfo-platform-iot-center-mqtt</artifactId>
            <version>3.1.0-SNAPSHOT</version>
            <scope>provided</scope>
            <optional>true</optional>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <!-- 要将源码放上去，需要加入这个插件 -->
            <plugin>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <configuration>
                    <attach>true</attach>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>